    "start": "c8ycli server -u ${C8Y_BASEURL}",
    "start:shell": "npm start -- --shell cockpit",
    "build": "c8ycli build",
    "build-ci": "set NODE_OPTIONS=--max_old_space_size=4096 && c8ycli build",
    "deploy": "c8ycli deploy",
    "postinstall": "ngcc"
